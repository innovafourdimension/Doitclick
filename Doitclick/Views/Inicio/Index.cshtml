
@{
    ViewData["Title"] = "Mi Gestión";
}

<div class="row">
    <div class="col-lg-12">

        <div class="panel">
            <!--Panel heading-->
            <div class="panel-heading">
                <div class="panel-control">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tabs-box-internal" data-toggle="tab" aria-expanded="true">Internos</a></li>
                        <li class=""><a href="#tabs-box-external" data-toggle="tab" aria-expanded="false">Externos</a></li>
                    </ul>
                </div>
                 <h3 class="panel-title">
                    <ol class="breadcrumb">
                        <li></li>
                        <li class="active">Mi Gestión</li>
                    </ol>
                </h3>
            </div>

            <!--Panel body-->
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade active in" id="tabs-box-internal">
                         <div class="row">
                            <div class="col-sm-12 col-md-12">
                                <table id="table-internos"
                                    data-search="true"
                                    data-show-refresh="true"
                                    data-show-export="true"
                                    data-minimum-count-columns="1"
                                    data-show-pagination-switch="true"
                                    data-pagination="true"
                                    data-id-field="Id"
                                    data-page-list="[40]"
                                    data-show-footer="false"
                                    data-side-pagination="server"
                                    data-url="/mi-gestion/bandeja-tareas/internos"></table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="tabs-box-external">
                        <div class="row">
                            <div class="col-sm-12 col-md-12">
                                <table id="table-externos"
                                    data-search="true"
                                    data-show-refresh="true"
                                    data-show-export="true"
                                    data-minimum-count-columns="1"
                                    data-show-pagination-switch="true"
                                    data-pagination="true"
                                    data-id-field="Id"
                                    data-page-list="[40]"
                                    data-show-footer="false"
                                    data-side-pagination="server"
                                    data-url="/mi-gestion/bandeja-tareas/externos"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
    </div>
</div>

@section styles{ 
    <link href="~/Assets/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/Assets/plugins/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/js/inicio.min.js"></script>

}